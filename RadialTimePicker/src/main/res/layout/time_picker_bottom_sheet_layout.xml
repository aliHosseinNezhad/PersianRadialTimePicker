<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_sheet_card_back"
        style="@style/CustomCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toTopOf="@id/clock_layout"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/page_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    tools:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="زمان شروع"
                    app:autoSizeTextType="uniform"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@id/text_digital_time_card_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/text_digital_time_card_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="2:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.55">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/bottom_hour_guid_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.7" />
                        <View
                            android:id="@+id/hour_text_back_shadow"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#68018786"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/digit_guideline"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:id="@+id/minute_text_back_shadow"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#68018786"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/digit_guideline"
                            app:layout_constraintTop_toTopOf="parent" />
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/digit_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />
                        <TextView
                            android:id="@+id/minute_text"
                            style="@style/clock_text_style"

                            app:layout_constraintBottom_toTopOf="@+id/bottom_hour_guid_line"
                            app:layout_constraintStart_toEndOf="@+id/center_time_text"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="29" />
                        <TextView
                            android:id="@+id/hour_title_text"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text="ساعت"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/hour_text"
                            app:layout_constraintStart_toStartOf="@id/hour_text"
                            app:layout_constraintTop_toBottomOf="@id/bottom_hour_guid_line" />
                        <TextView
                            android:id="@+id/minute_title_text"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text="دقیقه"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/minute_text"
                            app:layout_constraintStart_toStartOf="@id/minute_text"
                            app:layout_constraintTop_toBottomOf="@id/bottom_hour_guid_line" />
                        <TextView
                            android:id="@+id/center_time_text"
                            style="@style/clock_text_style"

                            android:text=":"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintBottom_toTopOf="@+id/bottom_hour_guid_line"
                            app:layout_constraintEnd_toEndOf="@id/digit_guideline"
                            app:layout_constraintStart_toStartOf="@id/digit_guideline"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.2" />
                        <TextView
                            android:id="@+id/hour_text"
                            style="@style/clock_text_style"
                            app:layout_constraintBottom_toTopOf="@+id/bottom_hour_guid_line"
                            app:layout_constraintEnd_toStartOf="@+id/center_time_text"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="22" />
                        <View
                            android:id="@+id/hour_text_btn"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/digit_guideline"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:id="@+id/minute_text_btn"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/digit_guideline"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/radio_card_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/teal_200"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/text_digital_time_card_view"
                    app:layout_constraintDimensionRatio="1:2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toEndOf="@id/text_digital_time_card_view"
                    app:layout_constraintTop_toTopOf="@id/text_digital_time_card_view">
                    <com.arappmain.radialtimepicker.RoundRadioGroup
                        android:id="@+id/pm_am_ratio_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clock_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/accept_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <View
                    android:visibility="gone"
                    app:layout_constraintDimensionRatio="4:3"
                    app:layout_constraintBottom_toTopOf="@id/clock_count_mode_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <com.arappmain.radialtimepicker.digitalTimePicker.DigitalTimePicker
                    android:visibility="gone"
                    android:id="@+id/time_picker_digital_time_picker"
                    app:layout_constraintWidth_percent="0.90"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/clock_analog_digit_mode_btn"
                    app:layout_constraintDimensionRatio="4:3" />
                <com.arappmain.radialtimepicker.RadialTimePickerView
                    android:visibility="visible"
                    android:id="@+id/radial_time_picker_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:clock_mode="hour24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.85" />
                <FrameLayout
                    android:id="@+id/clock_count_mode_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/dark_selected_radio_btn"
                    app:backgroundTint="@color/dark_teal_200"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/clock_layout_right_guideline"
                    app:layout_constraintWidth_percent="0.1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/icon_hour_12"
                        app:tint="@color/white" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/clock_analog_digit_mode_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/dark_selected_radio_btn"
                    app:backgroundTint="@color/dark_teal_200"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/clock_layout_left_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/icon_hour_12"
                        app:tint="@color/white" />
                </FrameLayout>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/clock_layout_right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.80" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/clock_layout_left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.20" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/accept_btn"
                style="@style/buttons_styles"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="تایید"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintEnd_toStartOf="@+id/center_base_helper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.3" />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                android:id="@+id/center_base_helper"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/page_state_change_btn"
                style="@style/buttons_styles"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="زمان پایان"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/center_base_helper"
                app:layout_constraintTop_toBottomOf="@id/clock_layout"
                app:layout_constraintWidth_percent="0.3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>