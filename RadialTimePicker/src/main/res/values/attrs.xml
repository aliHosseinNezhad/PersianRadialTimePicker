<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RadialTimePickerView">
        <attr name="clock_background" format="color" />
        <attr name="time_selector_color" format="color" />
        <attr name="clock_numbers_background" format="color" />
        <attr name="clock_numbers_text_color" format="color" />
        <attr name="text_typeface" format="reference" />
        <attr name="clock_mode" format="integer">
            <enum name="hour12" value="0" />
            <enum name="hour24" value="1" />
            <enum name="minute" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MaterialNumberPicker">
        <attr format="integer" name="mnpMinValue"/>
        <attr format="integer" name="mnpMaxValue"/>
        <attr format="integer" name="mnpValue"/>
        <attr format="color" name="mnpSeparatorColor"/>
        <attr format="dimension" name="mnpTextSize"/>
        <attr format="color" name="mnpTextColor"/>
        <attr name="mnpTextStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
            <flag name="bold_italic" value="3"/>
        </attr>
        <attr format="boolean" name="mnpEditable"/>
        <attr format="boolean" name="mnpWrapped"/>
        <attr format="string" name="mnpFontname"/>
    </declare-styleable>


</resources>