<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="minimum_text_size">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">15sp</item>
        <item name="autoSizeMinTextSize">1sp</item>
    </style>

    <style name="clock_text_style">
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth_percent">0.35</item>
    </style>


    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="circle_btn" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="buttons_styles" parent="minimum_text_size">
        <item name="backgroundTint">@color/dark_teal_200</item>
        <item name="cornerRadius">36dp</item>
        <item name="rippleColor">@color/teal_200</item>
        <item name="android:lines">2</item>
    </style>
</resources>